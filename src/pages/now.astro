---
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import { SITE_TITLE } from "../consts";
import * as now from "../content/now.md";

const { Content, frontmatter } = now;

// Mock system metrics for visual flair
const metrics = [
	{ label: "CPU_LOAD", value: "12%", status: "normal" },
	{ label: "MEMORY", value: "64%", status: "warning" },
	{ label: "NETWORK", value: "1.2Gbps", status: "normal" },
	{ label: "STORAGE", value: "45%", status: "normal" },
];
---

<!doctype html>
<html lang="en">
    <head>
        <BaseHead
            title={`Now - ${SITE_TITLE}`}
            description="What I'm doing now - Adrian Villanueva Martinez"
        />
    </head>
    <body>
        <Header />
        <main class="container">
            <!-- Hero Section -->
            <section class="hero-section">
                <div class="hero-content">
                    <div class="system-status">
                        <span class="status-dot"></span>
                        <span class="status-text">SYSTEM.STATUS.UPDATE</span>
                    </div>
                    <h1 class="hero-title">NOW_LOG</h1>
                    <p class="hero-subtitle">
                        // LAST_UPDATE: {frontmatter.lastUpdated}<br />
                        // LOCATION: TOKYO_JP
                    </p>
                </div>
            </section>

            <div class="content-grid">
                <!-- Main Content -->
                <div class="main-content">
                    <div class="content-panel">
                        <div class="panel-header">
                            <span class="panel-title">CURRENT_FOCUS.MD</span>
                            <div class="panel-controls">
                                <span class="control">_</span>
                                <span class="control">□</span>
                                <span class="control">×</span>
                            </div>
                        </div>
                        <div class="markdown-content">
                            <Content />
                        </div>
                        <div class="panel-footer">
                            <span class="footer-text">END_OF_LOG</span>
                        </div>
                    </div>
                </div>

                <!-- Sidebar / Metrics -->
                <aside class="metrics-sidebar">
                    <div class="metrics-panel">
                        <div class="panel-header">
                            <span class="panel-title">SYSTEM_METRICS</span>
                        </div>
                        <div class="metrics-grid">
                            {
                                metrics.map((metric) => (
                                    <div class="metric-item">
                                        <div class="metric-label">
                                            {metric.label}
                                        </div>
                                        <div class="metric-value-row">
                                            <span
                                                class={`metric-value ${metric.status}`}
                                            >
                                                {metric.value}
                                            </span>
                                            <div class="metric-bar">
                                                <div
                                                    class={`bar-fill ${metric.status}`}
                                                    style={`width: ${metric.value.replace('%', '').replace('Gbps', '0')}%`}
                                                />
                                            </div>
                                        </div>
                                    </div>
                                ))
                            }
                        </div>
                        <div class="terminal-output">
                            <div class="line">> scanning local_env...</div>
                            <div class="line">
                                > detecting active_projects...
                            </div>
                            <div class="line">> 3 processes found.</div>
                            <div class="line blink">> _</div>
                        </div>
                    </div>
                </aside>
            </div>
        </main>
        <Footer />
    </body>
</html>

<style>
    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 2rem;
    }

    /* Hero Section */
    .hero-section {
        margin-bottom: 3rem;
        padding: 2rem;
        border: 1px solid var(--border-color);
        background: var(--bg-secondary);
        position: relative;
    }

    .hero-section::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 4px;
        height: 100%;
        background: var(--accent-active);
    }

    .system-status {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        margin-bottom: 1rem;
        font-family: 'JetBrains Mono', monospace;
        font-size: 0.8rem;
        color: var(--text-muted);
    }

    .status-dot {
        width: 8px;
        height: 8px;
        background-color: var(--accent-active);
        border-radius: 50%;
        box-shadow: 0 0 5px var(--accent-active);
        animation: pulse 2s infinite;
    }

    @keyframes pulse {
        0% {
            opacity: 1;
        }
        50% {
            opacity: 0.5;
        }
        100% {
            opacity: 1;
        }
    }

    .hero-title {
        font-family: 'JetBrains Mono', monospace;
        font-size: 2.5rem;
        margin: 0 0 1rem 0;
        color: var(--text-primary);
        letter-spacing: -1px;
    }

    .hero-subtitle {
        font-family: 'JetBrains Mono', monospace;
        color: var(--text-muted);
        line-height: 1.6;
    }

    /* Content Grid */
    .content-grid {
        display: grid;
        grid-template-columns: 1fr 300px;
        gap: 2rem;
    }

    @media (max-width: 768px) {
        .content-grid {
            grid-template-columns: 1fr;
        }
    }

    /* Main Content */
    .content-panel {
        border: 1px solid var(--border-color);
        background: var(--bg-secondary);
        height: 100%;
    }

    .panel-header {
        padding: 0.75rem 1rem;
        border-bottom: 1px solid var(--border-color);
        display: flex;
        justify-content: space-between;
        align-items: center;
        background: var(--bg-tertiary);
    }

    .panel-title {
        font-family: 'JetBrains Mono', monospace;
        font-size: 0.9rem;
        color: var(--text-muted);
    }

    .panel-controls {
        display: flex;
        gap: 0.5rem;
        color: var(--text-muted);
        font-size: 0.8rem;
    }

    .markdown-content {
        padding: 2rem;
        font-family: 'Inter', sans-serif;
        line-height: 1.7;
        color: var(--text-secondary);
    }

    .panel-footer {
        padding: 0.5rem 1rem;
        border-top: 1px solid var(--border-color);
        font-family: 'JetBrains Mono', monospace;
        font-size: 0.8rem;
        color: var(--text-muted);
        text-align: right;
    }

    /* Metrics Sidebar */
    .metrics-panel {
        border: 1px solid var(--border-color);
        background: var(--bg-secondary);
        padding: 0;
    }

    .metrics-grid {
        padding: 1.5rem;
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
    }

    .metric-item {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    .metric-label {
        font-family: 'JetBrains Mono', monospace;
        font-size: 0.8rem;
        color: var(--text-muted);
    }

    .metric-value-row {
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    .metric-value {
        font-family: 'JetBrains Mono', monospace;
        font-size: 1rem;
        color: var(--text-primary);
        min-width: 60px;
    }

    .metric-value.warning {
        color: #e5c07b;
    }

    .metric-bar {
        flex: 1;
        height: 4px;
        background: var(--bg-tertiary);
        border-radius: 2px;
        overflow: hidden;
    }

    .bar-fill {
        height: 100%;
        background: var(--accent-active);
    }

    .bar-fill.warning {
        background: #e5c07b;
    }

    .terminal-output {
        padding: 1.5rem;
        border-top: 1px solid var(--border-color);
        background: #000;
        font-family: 'JetBrains Mono', monospace;
        font-size: 0.8rem;
        color: var(--text-muted);
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    .line {
        opacity: 0.7;
    }

    .blink {
        animation: blink 1s step-end infinite;
    }

    @keyframes blink {
        50% {
            opacity: 0;
        }
    }
</style>
