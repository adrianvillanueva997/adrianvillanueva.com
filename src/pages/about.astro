<style>
    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 2rem;
    }

    /* Hero Section */
    .hero-section {
        margin-bottom: 3rem;
        padding: 2rem;
        border: 1px solid var(--border-color);
        background: var(--bg-secondary);
        position: relative;
        overflow: hidden;
    }

    .hero-section::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 4px;
        height: 100%;
        background: var(--accent-active);
    }

    .system-status {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        margin-bottom: 1rem;
        font-family: 'JetBrains Mono', monospace;
        font-size: 0.8rem;
        color: var(--text-muted);
    }

    .status-dot {
        width: 8px;
        height: 8px;
        background-color: var(--accent-active);
        border-radius: 50%;
        box-shadow: 0 0 5px var(--accent-active);
        animation: pulse 2s infinite;
    }

    @keyframes pulse {
        0% { opacity: 1; }
        50% { opacity: 0.5; }
        100% { opacity: 1; }
    }

    .hero-title {
        font-family: 'JetBrains Mono', monospace;
        font-size: 2.5rem;
        margin: 0 0 1rem 0;
        color: var(--text-primary);
        letter-spacing: -1px;
    }

    .hero-subtitle {
        font-family: 'JetBrains Mono', monospace;
        color: var(--text-muted);
        line-height: 1.6;
    }

    /* Content Grid */
    .content-grid {
        display: grid;
        grid-template-columns: 300px 1fr;
        gap: 2rem;
    }

    @media (max-width: 768px) {
        .content-grid {
            grid-template-columns: 1fr;
        }
    }

    /* Profile Sidebar */
    .profile-card {
        border: 1px solid var(--border-color);
        background: var(--bg-secondary);
        position: sticky;
        top: 2rem;
    }

    .card-header {
        padding: 1rem;
        border-bottom: 1px solid var(--border-color);
        display: flex;
        justify-content: space-between;
        align-items: center;
        font-family: 'JetBrains Mono', monospace;
        font-size: 0.9rem;
        color: var(--text-muted);
    }

    .profile-image-container {
        position: relative;
        width: 100%;
        aspect-ratio: 1;
        overflow: hidden;
        border-bottom: 1px solid var(--border-color);
    }

    .profile-img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        filter: grayscale(100%) contrast(1.2);
        transition: filter 0.3s ease;
    }

    .profile-card:hover .profile-img {
        filter: grayscale(0%) contrast(1);
    }

    .scan-line {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 2px;
        background: rgba(var(--accent-rgb), 0.5);
        animation: scan 3s linear infinite;
        pointer-events: none;
    }

    @keyframes scan {
        0% { top: 0; opacity: 0; }
        10% { opacity: 1; }
        90% { opacity: 1; }
        100% { top: 100%; opacity: 0; }
    }

    .profile-stats {
        padding: 1rem;
        border-bottom: 1px solid var(--border-color);
    }

    .stat-row {
        display: flex;
        justify-content: space-between;
        margin-bottom: 0.5rem;
        font-family: 'JetBrains Mono', monospace;
        font-size: 0.8rem;
    }

    .stat-row:last-child {
        margin-bottom: 0;
    }

    .stat-label {
        color: var(--text-muted);
    }

    .stat-value {
        color: var(--text-primary);
    }

    .stat-value.active {
        color: var(--accent-active);
    }

    .profile-actions {
        padding: 1rem;
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    .action-btn {
        display: flex;
        justify-content: space-between;
        padding: 0.75rem 1rem;
        border: 1px solid var(--border-color);
        color: var(--text-primary);
        text-decoration: none;
        font-family: 'JetBrains Mono', monospace;
        font-size: 0.9rem;
        transition: all 0.2s ease;
    }

    .action-btn:hover {
        background: var(--hover-bg);
        border-color: var(--accent-active);
    }

    .action-btn.primary {
        background: var(--accent-active);
        color: var(--bg-primary);
        border-color: var(--accent-active);
    }

    .action-btn.primary:hover {
        background: transparent;
        color: var(--accent-active);
    }

    /* Main Content */
    .main-content {
        display: flex;
        flex-direction: column;
        gap: 2rem;
    }

    .content-panel {
        border: 1px solid var(--border-color);
        background: var(--bg-secondary);
    }

    .panel-header {
        padding: 0.75rem 1rem;
        border-bottom: 1px solid var(--border-color);
        display: flex;
        justify-content: space-between;
        align-items: center;
        background: var(--bg-tertiary);
    }

    .panel-title {
        font-family: 'JetBrains Mono', monospace;
        font-size: 0.9rem;
        color: var(--text-muted);
    }

    .panel-controls {
        display: flex;
        gap: 0.5rem;
        color: var(--text-muted);
        font-size: 0.8rem;
    }

    .markdown-content {
        padding: 2rem;
        font-family: 'Inter', sans-serif;
        line-height: 1.7;
        color: var(--text-secondary);
    }

    /* Countries Timeline */
    .timeline-container {
        padding: 2rem;
    }

    .timeline-entry {
        display: flex;
        gap: 1.5rem;
        position: relative;
    }

    .timeline-marker {
        display: flex;
        flex-direction: column;
        align-items: center;
        position: relative;
    }

    .marker-dot {
        width: 12px;
        height: 12px;
        border-radius: 50%;
        border: 2px solid var(--accent-active);
        background: var(--bg-secondary);
        position: relative;
        z-index: 1;
        flex-shrink: 0;
    }

    .marker-line {
        width: 2px;
        flex: 1;
        background: var(--border-color);
        margin-top: 0.5rem;
    }

    .timeline-content {
        flex: 1;
        padding-bottom: 2rem;
    }

    .timeline-entry:last-child .timeline-content {
        padding-bottom: 0;
    }

    .timeline-header {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        margin-bottom: 0.5rem;
        flex-wrap: wrap;
    }

    .country-flag {
        font-size: 1.5rem;
        line-height: 1;
    }

    .country-name {
        font-family: 'JetBrains Mono', monospace;
        font-size: 1.2rem;
        color: var(--text-primary);
        margin: 0;
    }

    .timeline-years {
        font-family: 'JetBrains Mono', monospace;
        font-size: 0.9rem;
        color: var(--accent-active);
        padding: 0.25rem 0.5rem;
        border: 1px solid var(--accent-active);
        margin-left: auto;
    }

    .timeline-period {
        font-family: 'JetBrains Mono', monospace;
        font-size: 0.9rem;
        color: var(--text-muted);
        margin-bottom: 0.5rem;
    }

    .timeline-description {
        font-family: 'JetBrains Mono', monospace;
        font-size: 0.9rem;
        color: var(--text-secondary);
        line-height: 1.6;
    }
</style>
