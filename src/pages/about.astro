		country: "Spain",
		flag: "ðŸ‡ªðŸ‡¸",
		period: "1997 - 2021",
		years: "24 years",
		description: "Origin â€¢ Education â€¢ Early Career",
	},
	{
		country: "Netherlands",
		flag: "ðŸ‡³ðŸ‡±",
		period: "2021 - 2024",
		years: "3 years",
		description: "Amsterdam â€¢ Data Engineering",
	},
	{
		country: "Japan",
		flag: "ðŸ‡¯ðŸ‡µ",
		period: "2024 - Present",
		years: "Current",
		description: "Tokyo â€¢ Data Platform engineering",
	},
];
---

<!doctype html>
<html lang="en">
    <head>
        <BaseHead
            title={`About - ${SITE_TITLE}`}
            description="About Adrian Villanueva Martinez - Software Engineer & Systems Designer"
        />
    </head>
    <body>
        <Header />
        <main class="container">
            <div class="about-grid">
                <!-- Profile Card -->
                <div class="bento-item profile-card">
                    <div class="module-header">
                        <Icon name="mdi:account" size={16} />
                        <span class="module-title">PROFILE</span>
                    </div>
                    <div class="profile-content">
                        <div class="avatar-container">
                            <Image
                                src={mePhoto}
                                alt={frontmatter.name}
                                class="avatar"
                                width={120}
                                height={120}
                            />
                            <div class="status-indicator"></div>
                        </div>
                        <h1 class="name">{frontmatter.name}</h1>
                        <p class="role">{frontmatter.occupation}</p>
                        <div class="location-info">
                            <Icon name="mdi:map-marker" size={14} />
                            <span>Tokyo, Japan</span>
                        </div>
                        <div class="social-links">
                            <a href={frontmatter.github} target="_blank" aria-label="GitHub">
                                <Icon name="mdi:github" size={20} />
                            </a>
                            <a href={frontmatter.linkedin} target="_blank" aria-label="LinkedIn">
                                <Icon name="mdi:linkedin" size={20} />
                            </a>
                            <a href={`mailto:${frontmatter.email}`} aria-label="Email">
                                <Icon name="mdi:email" size={20} />
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Bio Panel -->
                <div class="bento-item bio-panel">
                    <div class="module-header">
                        <Icon name="mdi:file-document" size={16} />
                        <span class="module-title">BIO</span>
                    </div>
                    <div class="bio-content">
                        <Content />
                    </div>
                </div>

                <!-- Timeline Panel -->
                <div class="bento-item timeline-panel">
                    <div class="module-header">
                        <Icon name="mdi:map-marker-path" size={16} />
                        <span class="module-title">LOCATIONS</span>
                    </div>
                    <div class="timeline-container">
                        {timeline.map((entry, index) => (
                            <div class="timeline-entry">
                                <div class="timeline-marker">
                                    <div class="marker-dot"></div>
                                    {index < timeline.length - 1 && <div class="marker-line"></div>}
                                </div>
                                <div class="timeline-content">
                                    <div class="timeline-header">
                                        <span class="country-flag">{entry.flag}</span>
                                        <h3 class="country-name">{entry.country}</h3>
                                        <span class="timeline-years">{entry.years}</span>
                                    </div>
                                    <div class="timeline-period">{entry.period}</div>
                                    <div class="timeline-description">{entry.description}</div>
                                </div>
                            </div>
                        ))}
                    </div>
                    </div>

                </div>
            </div>
        </main>
        <Footer />
    </body>
</html>

<style>
    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 2rem 1rem;
    }

    .about-grid {
        display: grid;
        grid-template-columns: 300px 1fr;
        gap: 1.5rem;
        margin: 2rem 0;
    }

    .bento-item {
        background: var(--glass-bg);
        backdrop-filter: blur(12px);
        -webkit-backdrop-filter: blur(12px);
        border: 1px solid var(--border-color);
        border-radius: var(--radius-md);
        padding: 1.5rem;
        transition: all var(--transition-base);
        position: relative;
        overflow: hidden;
    }

    .bento-item::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 2px;
        background: var(--gradient-primary);
        opacity: 0;
        transition: opacity var(--transition-base);
    }

    .bento-item:hover {
        border-color: var(--border-glow);
        transform: translateY(-3px);
        box-shadow: var(--shadow-glow), var(--shadow-md);
    }

    .bento-item:hover::before {
        opacity: 1;
    }

    .module-header {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        margin-bottom: 1.5rem;
        font-family: 'JetBrains Mono', monospace;
        font-size: 0.75rem;
        color: var(--text-muted);
        letter-spacing: 0.05em;
    }

    /* Profile Card */
    .profile-card {
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
    }

    .profile-content {
        display: flex;
        flex-direction: column;
        align-items: center;
        width: 100%;
    }

    .avatar-container {
        position: relative;
        margin-bottom: 1rem;
    }

    .avatar {
        border-radius: 50%;
        border: 2px solid var(--accent-active);
        box-shadow: 0 0 20px var(--accent-active-glow);
    }

    .status-indicator {
        position: absolute;
        bottom: 5px;
        right: 5px;
        width: 12px;
        height: 12px;
        background-color: var(--accent-active);
        border-radius: 50%;
        border: 2px solid var(--bg-secondary);
        animation: pulse-glow 2s ease-in-out infinite;
    }

    .name {
        font-size: 1.5rem;
        margin: 0 0 0.5rem 0;
        line-height: 1.2;
        background: var(--gradient-primary);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .role {
        color: var(--text-secondary);
        font-size: 0.9rem;
        margin-bottom: 1rem;
    }

    .location-info {
        display: flex;
        align-items: center;
        gap: 0.25rem;
        font-size: 0.8rem;
        color: var(--text-muted);
        font-family: 'JetBrains Mono', monospace;
        margin-bottom: 1.5rem;
    }

    .social-links {
        display: flex;
        gap: 1rem;
    }

    .social-links a {
        color: var(--text-muted);
        transition: all var(--transition-base);
        padding: 0.4rem;
        border-radius: var(--radius-sm);
    }

    .social-links a:hover {
        color: var(--accent-active);
        background: var(--accent-active-subtle);
        transform: translateY(-2px);
    }

    /* Bio Panel */
    .bio-panel {
        grid-column: 2;
    }

    .bio-content {
        font-family: 'Inter', sans-serif;
        line-height: 1.7;
        color: var(--text-secondary);
        font-size: 0.95rem;
    }

    .bio-content :global(strong) {
        color: var(--text-primary);
    }

    .bio-content :global(h2) {
        font-size: 1.1rem;
        margin: 1.5rem 0 1rem 0;
        border: none;
        padding: 0;
    }

    .bio-content :global(ul) {
        list-style: none;
        padding: 0;
    }

    .bio-content :global(li) {
        position: relative;
        padding-left: 1.5rem;
        margin-bottom: 0.5rem;
    }

    .bio-content :global(li::before) {
        content: '>';
        position: absolute;
        left: 0;
        color: var(--accent-active);
        font-family: 'JetBrains Mono', monospace;
    }

    /* Timeline Panel */
    .timeline-panel {
        grid-column: 2;
    }

    .timeline-container {
        display: flex;
        flex-direction: column;
    }

    .timeline-entry {
        display: flex;
        gap: 1.5rem;
        position: relative;
    }

    .timeline-marker {
        display: flex;
        flex-direction: column;
        align-items: center;
        position: relative;
    }

    .marker-dot {
        width: 12px;
        height: 12px;
        border-radius: 50%;
        border: 2px solid var(--accent-active);
        background: var(--bg-secondary);
        position: relative;
        z-index: 1;
        flex-shrink: 0;
        box-shadow: 0 0 8px var(--accent-active-glow);
    }

    .marker-line {
        width: 2px;
        flex: 1;
        background: linear-gradient(180deg, var(--accent-active), transparent);
        margin-top: 0.5rem;
        opacity: 0.4;
    }

    .timeline-content {
        flex: 1;
        padding-bottom: 1.5rem;
    }

    .timeline-entry:last-child .timeline-content {
        padding-bottom: 0;
    }

    .timeline-entry:last-child .marker-line {
        display: none;
    }

    .timeline-header {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        margin-bottom: 0.5rem;
        flex-wrap: wrap;
    }

    .country-flag {
        font-size: 1.5rem;
        line-height: 1;
    }

    .country-name {
        font-family: 'JetBrains Mono', monospace;
        font-size: 1.2rem;
        color: var(--text-primary);
        margin: 0;
    }

    .timeline-years {
        font-family: 'JetBrains Mono', monospace;
        font-size: 0.9rem;
        color: var(--accent-active);
        padding: 0.25rem 0.5rem;
        border: 1px solid rgba(0, 230, 138, 0.3);
        border-radius: var(--radius-sm);
        background: var(--accent-active-subtle);
        margin-left: auto;
        text-shadow: 0 0 8px var(--accent-active-glow);
    }

    .timeline-period {
        font-family: 'JetBrains Mono', monospace;
        font-size: 0.9rem;
        color: var(--text-muted);
        margin-bottom: 0.5rem;
    }

    .timeline-description {
        font-size: 0.9rem;
        color: var(--text-secondary);
        line-height: 1.6;
    }

    @media (max-width: 768px) {
        .about-grid {
            grid-template-columns: 1fr;
        }

        .profile-card,
        .bio-panel,
        .timeline-panel {
            grid-column: 1;
        }
    }
</style>
