---
import BaseHead from "@/components/BaseHead.astro";
import Footer from "@/components/Footer.astro";
import Header from "@/components/Header.astro";
import { SITE_DESCRIPTION, SITE_TITLE } from "@/consts";
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={`404 - ${SITE_TITLE}`} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main class="container">
			<div class="error-content">
				<div class="error-code">404</div>
				<div class="error-message">SYSTEM_ERROR: RESOURCE_NOT_FOUND</div>
				<div class="terminal-output">
					<p>> initiating_search_protocol...</p>
					<p>> scanning_directories...</p>
					<p class="error">> error: target_file_missing</p>
					<p>> suggestion: return_to_base</p>
				</div>
				<a href="/" class="home-btn">
					<span class="btn-bracket">[</span>
					RETURN_HOME
					<span class="btn-bracket">]</span>
				</a>
			</div>
		</main>
		<Footer />
	</body>
</html>

<style>
	.container {
		min-height: 60vh;
		display: flex;
		align-items: center;
		justify-content: center;
	}

	.error-content {
		text-align: center;
		font-family: "JetBrains Mono", monospace;
	}

	.error-code {
		font-size: 8rem;
		font-weight: bold;
		line-height: 1;
		margin-bottom: 1rem;
		background: var(--gradient-primary);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
		filter: drop-shadow(0 0 30px var(--accent-active-glow));
	}

	.error-message {
		font-size: 1.5rem;
		color: var(--text-primary);
		margin-bottom: 2rem;
		letter-spacing: 2px;
	}

	.terminal-output {
		background: var(--glass-bg);
		backdrop-filter: blur(12px);
		-webkit-backdrop-filter: blur(12px);
		border: 1px solid var(--border-color);
		padding: 1.5rem;
		text-align: left;
		margin-bottom: 2rem;
		border-radius: var(--radius-md);
		max-width: 400px;
		margin-left: auto;
		margin-right: auto;
		box-shadow: var(--shadow-md);
	}

	.terminal-output p {
		margin: 0.5rem 0;
		color: var(--text-muted);
		font-size: 0.9rem;
	}

	.terminal-output .error {
		color: var(--accent-error);
		text-shadow: 0 0 8px rgba(255, 92, 92, 0.3);
	}

	.home-btn {
		display: inline-block;
		text-decoration: none;
		color: var(--text-primary);
		font-size: 1.2rem;
		transition: all var(--transition-base);
		padding: 0.75rem 1.5rem;
		border: 1px solid var(--border-color);
		border-radius: var(--radius-sm);
		background: transparent;
	}

	.home-btn:hover {
		color: var(--accent-active);
		border-color: var(--border-glow);
		box-shadow: 0 0 20px var(--accent-active-glow);
		text-shadow: none;
	}

	.btn-bracket {
		color: var(--accent-active);
		margin: 0 0.5rem;
	}
</style>
