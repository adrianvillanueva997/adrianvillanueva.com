		font-family: 'Orbitron', monospace;
		font-size: 0.9rem;
		font-weight: 600;
		color: var(--text-muted);
		text-transform: uppercase;
		letter-spacing: 0.15em;
	}

	.cta-group {
		display: flex;
		gap: 1.5rem;
		flex-wrap: wrap;
	}

	.cta-primary {
		position: relative;
		display: inline-flex;
		align-items: center;
		gap: 0.75rem;
		padding: 1.2rem 2.5rem;
		background: var(--accent-cyan);
		color: var(--bg-primary);
		font-family: 'Orbitron', monospace;
		font-weight: 700;
		font-size: 0.95rem;
		text-transform: uppercase;
		letter-spacing: 0.1em;
		text-decoration: none;
		border: 3px solid var(--accent-cyan);
		overflow: hidden;
		transition: all 0.3s ease;
		animation: neon-pulse-cyan 3s ease-in-out infinite;
	}

	/* Subtle neon pulse animation */
	@keyframes neon-pulse-cyan {
		0%,
		100% {
			box-shadow: 0 0 10px rgba(0, 255, 255, 0.3);
		}
		50% {
			box-shadow:
				0 0 20px rgba(0, 255, 255, 0.6),
				0 0 30px rgba(0, 255, 255, 0.3);
		}
	}

	.cta-primary::before {
		content: '';
		position: absolute;
		top: 0;
		left: -100%;
		width: 100%;
		height: 100%;
		background: linear-gradient(
			90deg,
			transparent,
			rgba(255, 255, 255, 0.3),
			transparent
		);
		transition: left 0.5s;
	}

	.cta-primary:hover::before {
		left: 100%;
	}

	.cta-primary:hover {
		transform: translate(-3px, -3px);
		box-shadow: 6px 6px 0 var(--accent-cyan);
		animation: none; /* Stop pulse on hover */
	}

	.cta-primary svg {
		width: 20px;
		height: 20px;
	}

	.cta-secondary {
		display: inline-flex;
		align-items: center;
		gap: 0.75rem;
		padding: 1.2rem 2.5rem;
		background: transparent;
		color: var(--text-primary);
		font-family: 'Orbitron', monospace;
		font-weight: 700;
		font-size: 0.95rem;
		text-transform: uppercase;
		letter-spacing: 0.1em;
		text-decoration: none;
		border: 3px solid var(--accent-crimson);
		transition: all 0.3s ease;
		animation: neon-pulse-crimson 3s ease-in-out infinite;
		animation-delay: 1.5s; /* Offset from primary button */
	}

	/* Subtle neon pulse animation for crimson */
	@keyframes neon-pulse-crimson {
		0%,
		100% {
			box-shadow: 0 0 10px rgba(220, 20, 60, 0.3);
		}
		50% {
			box-shadow:
				0 0 20px rgba(220, 20, 60, 0.6),
				0 0 30px rgba(220, 20, 60, 0.3);
		}
	}

	.cta-secondary:hover {
		background: var(--accent-crimson);
		color: var(--bg-primary);
		transform: translate(-3px, -3px);
		box-shadow: 6px 6px 0 var(--accent-crimson);
		animation: none; /* Stop pulse on hover */
	}

	.cta-secondary svg {
		width: 20px;
		height: 20px;
	}

	/* Right Side - Photo */
	.hero-visual {
		position: relative;
		animation: fade-in-up 0.8s ease-out 0.2s both;
	}

	.photo-frame {
		position: relative;
		aspect-ratio: 3/4;
		max-width: 450px;
		margin: 0 auto;
		overflow: hidden;
	}

	.hero-photo {
		width: 100%;
		height: 100%;
		object-fit: cover;
		filter: grayscale(0.3) contrast(1.1);
		transition: all 0.5s ease;
	}

	.photo-frame:hover .hero-photo {
		filter: grayscale(0) contrast(1.2);
		transform: scale(1.05);
	}

	.photo-overlay {
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: linear-gradient(
			135deg,
			rgba(0, 255, 255, 0.1) 0%,
			transparent 50%,
			rgba(220, 20, 60, 0.1) 100%
		);
		pointer-events: none;
		mix-blend-mode: overlay;
	}

	.photo-border {
		position: absolute;
		top: -10px;
		left: -10px;
		right: 10px;
		bottom: 10px;
		border: 3px solid var(--accent-cyan);
		pointer-events: none;
		transition: all 0.3s ease;
	}

	.photo-frame:hover .photo-border {
		top: -15px;
		left: -15px;
		right: 15px;
		bottom: 15px;
		box-shadow: 0 0 30px rgba(0, 255, 255, 0.3);
	}

	.visual-accent {
		position: absolute;
		bottom: -20px;
		right: -20px;
		width: 200px;
		height: 200px;
		background: radial-gradient(
			circle,
			var(--accent-crimson-glow) 0%,
			transparent 70%
		);
		pointer-events: none;
		animation: pulse 3s ease-in-out infinite;
	}

	@keyframes pulse {
		0%,
		100% {
			opacity: 0.3;
			transform: scale(1);
		}
		50% {
			opacity: 0.6;
			transform: scale(1.1);
		}
	}

	/* Stats Bar */
	.stats-bar {
		display: flex;
		justify-content: center;
		align-items: center;
		gap: 3rem;
		max-width: 800px;
		margin: 4rem auto 0;
		padding: 1.5rem 2rem;
		background: var(--bg-secondary);
		border: 2px solid var(--bg-tertiary);
		border-left: 4px solid var(--accent-cyan);
		animation: fade-in-up 0.8s ease-out 0.4s both;
	}

	.stat-item {
		display: flex;
		align-items: center;
		gap: 1rem;
	}

	.stat-item svg {
		color: var(--accent-cyan);
		width: 24px;
		height: 24px;
	}

	.stat-content {
		display: flex;
		flex-direction: column;
	}

	.stat-value {
		font-family: 'Orbitron', monospace;
		font-weight: 900;
		font-size: 1.2rem;
		color: var(--text-primary);
		line-height: 1;
	}

	.stat-label {
		font-size: 0.75rem;
		color: var(--text-muted);
		text-transform: uppercase;
		letter-spacing: 0.1em;
	}

	.stat-divider {
		width: 2px;
		height: 40px;
		background: var(--bg-tertiary);
	}

	/* ========================================
	   SECTION STYLES - Consistent Structure
	======================================== */

	.section-container {
		max-width: 1400px;
		margin: 0 auto;
		padding: 6rem 2rem;
		position: relative;
		z-index: 1; /* Ensure content appears above background pattern */
	}

	.section-heading {
		display: flex;
		align-items: center;
		justify-content: center;
		gap: 2rem;
		margin-bottom: 4rem;
	}

	.heading-line {
		flex: 1;
		height: 2px;
		max-width: 200px;
		background: linear-gradient(
			90deg,
			transparent,
			var(--accent-cyan),
			transparent
		);
	}

	.heading-text {
		font-family: 'Orbitron', monospace;
		font-weight: 900;
		font-size: clamp(1.8rem, 4vw, 3rem);
		color: var(--text-primary);
		text-transform: uppercase;
		letter-spacing: 0.05em;
		white-space: nowrap;
	}

	/* ========================================
	   SKILLS SECTION
	======================================== */

	.skills-showcase {
		background: var(--bg-secondary);
		position: relative;
		isolation: isolate; /* Create stacking context */
	}

	/* Subtle dot pattern background - GPU accelerated */
	.skills-showcase::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background-image: radial-gradient(
			circle at center,
			rgba(0, 255, 255, 0.08) 1.5px,
			transparent 1.5px
		);
		background-size: 24px 24px;
		pointer-events: none;
		z-index: 0;
		opacity: 1;
	}

