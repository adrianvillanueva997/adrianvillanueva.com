---
import { getCollection } from "astro:content";
import mePhoto from "@/assets/me/me.jpg";
import BaseHead from "@/components/BaseHead.astro";
import BentoGrid from "@/components/BentoGrid.astro";
import Footer from "@/components/Footer.astro";
import Header from "@/components/Header.astro";
import { SITE_DESCRIPTION, SITE_TITLE } from "@/consts";

// Fetch latest blog post
const posts = (
	await getCollection("blog", ({ data }) => {
		return import.meta.env.PROD ? data.draft !== true : true;
	})
).sort((a, b) => {
	const dateA = a.data.date || a.data.pubDate;
	const dateB = b.data.date || b.data.pubDate;
	return dateB.valueOf() - dateA.valueOf();
});

const latestPost = posts[0];

// Prepare data for BentoGrid
const latestPostData = {
	title: latestPost.data.title,
	date: latestPost.data.date || latestPost.data.pubDate || new Date(),
	slug: latestPost.id,
};

const nowStatus = "Learning Zig & Boxing";
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />

		<main class="container">
			<BentoGrid
				mePhoto={mePhoto}
				latestPost={latestPostData}
				nowStatus={nowStatus}
			/>

			<section class="intro-text">
				<h2>System Philosophy</h2>
				<p>
					I believe in building systems that are <strong>resilient</strong>, <strong>elegant</strong>, and <strong>meaningful</strong>.
					My approach focuses on simplicity over complexity, exceptional developer experience, and sustainable architecture.
				</p>
			</section>
		</main>

		<Footer />

		<style>
			.container {
				max-width: var(--content-width);
				margin: 0 auto;
				padding: 0 1rem;
			}

			.intro-text {
				margin: 4rem 0;
				max-width: 800px;
			}

			.intro-text h2 {
				margin-bottom: 1.5rem;
			}

			.intro-text p {
				font-size: 1.1rem;
				line-height: 1.8;
			}
		</style>
	</body>
</html>
