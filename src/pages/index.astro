<style>
	/* ========================================
	   DARK BRUTALIST-SYNTHWAVE AESTHETIC
	   Fast, Modern, Intense
	======================================== */

	* {
		box-sizing: border-box;
	}

	/* ========================================
	   HERO SECTION - Cinematic & Bold
	======================================== */

	.hero-main {
		min-height: 100vh;
		background: var(--bg-primary);
		position: relative;
		overflow: hidden;
		padding: 6rem 2rem 4rem;
		display: flex;
		flex-direction: column;
		justify-content: center;
		isolation: isolate;
	}

	/* Animated background grid - More visible */
	.hero-main::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background-image: linear-gradient(
				rgba(0, 255, 255, 0.06) 1px,
				transparent 1px
			),
			linear-gradient(90deg, rgba(0, 255, 255, 0.06) 1px, transparent 1px);
		background-size: 50px 50px;
		animation: grid-move 20s linear infinite;
		pointer-events: none;
		z-index: 0;
	}

	/* Synthwave scanline effect */
	.hero-main::after {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: linear-gradient(
			transparent 50%,
			rgba(0, 255, 255, 0.03) 50%
		);
		background-size: 100% 4px;
		animation: scanline 8s linear infinite;
		pointer-events: none;
		z-index: 0;
	}

	@keyframes grid-move {
		0% {
			transform: translate(0, 0);
		}
		100% {
			transform: translate(50px, 50px);
		}
	}

	@keyframes scanline {
		0% {
			transform: translateY(-100%);
		}
		100% {
			transform: translateY(100%);
		}
	}

	/* Cinematic vignette overlay - Pure CSS, zero performance cost */
	.hero-vignette {
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: radial-gradient(
			ellipse at center,
			transparent 40%,
			rgba(0, 0, 0, 0.4) 100%
		);
		pointer-events: none;
		z-index: 1;
	}

	.hero-grid {
		max-width: 1400px;
		margin: 0 auto;
		display: grid;
		grid-template-columns: 1.2fr 1fr;
		gap: 4rem;
		align-items: center;
		position: relative;
		z-index: 2; /* Above vignette */
	}

	/* Left Side - Content */
	.hero-content {
		animation: fade-in-up 0.8s ease-out;
	}

	@keyframes fade-in-up {
		from {
			opacity: 0;
			transform: translateY(30px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	.location-badge {
		display: inline-flex;
		align-items: center;
		gap: 0.75rem;
		padding: 0.5rem 1rem;
		background: var(--bg-secondary);
		border: 2px solid var(--bg-tertiary);
		margin-bottom: 2rem;
		font-family: 'Orbitron', monospace;
		font-size: 0.85rem;
		font-weight: 600;
		color: var(--text-secondary);
		transition: all 0.3s ease;
	}

	.location-badge:hover {
		border-color: var(--accent-cyan);
		box-shadow: 0 0 20px rgba(0, 255, 255, 0.2);
	}

	.location-from {
		color: var(--text-secondary);
	}

	.location-to {
		color: var(--accent-cyan);
		text-shadow: 0 0 10px var(--accent-cyan-glow);
	}

	.location-badge svg {
		color: var(--accent-cyan);
	}

	.hero-name {
		font-family: 'Orbitron', monospace;
		font-weight: 900;
		font-size: clamp(3rem, 8vw, 6rem);
		line-height: 0.9;
		margin-bottom: 2rem;
		letter-spacing: -0.03em;
		cursor: default;
	}

	.name-line {
		display: block;
		color: var(--text-primary);
		text-transform: uppercase;
		position: relative;
		transition: all 0.3s ease;
	}

	/* Enhanced glitch effect on hover */
	.hero-name:hover .name-line {
		animation: glitch-intense 0.3s ease-in-out;
	}

	.name-line.crimson {
		color: var(--accent-crimson);
		text-shadow:
			0 0 20px var(--accent-crimson-glow),
			2px 2px 0 rgba(220, 20, 60, 0.3);
	}

	/* Intense glitch animation - triggered on hover */
	@keyframes glitch-intense {
		0% {
			transform: translate(0);
			text-shadow: 0 0 0 transparent;
		}
		20% {
			transform: translate(-3px, 2px);
			text-shadow:
				3px -2px 0 var(--accent-cyan),
				-3px 2px 0 var(--accent-crimson);
		}
		40% {
			transform: translate(2px, -3px);
			text-shadow:
				-2px 3px 0 var(--accent-cyan),
				2px -3px 0 var(--accent-crimson);
		}
		60% {
			transform: translate(-2px, -2px);
			text-shadow:
				2px 2px 0 var(--accent-cyan),
				-2px -2px 0 var(--accent-crimson);
		}
		80% {
			transform: translate(3px, 3px);
			text-shadow:
				-3px -3px 0 var(--accent-cyan),
				3px 3px 0 var(--accent-crimson);
		}
		100% {
			transform: translate(0);
			text-shadow: 0 0 0 transparent;
		}
	}

