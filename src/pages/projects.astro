---
import { Image } from "astro:assets";
import { readFileSync } from "fs";
import { join } from "path";
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import { SITE_TITLE } from "../consts";

// Glob import all project images from assets folder
const images = import.meta.glob("@/assets/**/*.{png,jpg,jpeg,webp,svg}", {
	eager: true,
});

// Create a mapping of filename to image module
const imageMap: Record<string, any> = {};
for (const path in images) {
	const filename = path.split("/").pop();
	if (filename) {
		imageMap[filename] = (images[path] as any).default;
	}
}

// Define types for the projects data
interface Project {
	title: string;
	description: string;
	href?: string;
	imgSrc?: string;
	categories?: string[];
	isOpenSource?: boolean;
	repoUrl?: string;
}

interface ProjectsData {
	projects: Project[];
}

// Read and parse the projects YAML file
const projectsPath = join(process.cwd(), "src/data/projects.yaml");
const projectsContent = readFileSync(projectsPath, "utf8");
const { load } = await import("js-yaml");
const projectsData = load(projectsContent) as ProjectsData;

// Get all projects
const allProjects = projectsData.projects;

// Get all unique categories
const allCategories = Array.from(
	new Set(
		projectsData.projects
			.flatMap((project) => project.categories || [])
			.filter(Boolean),
	),
).sort();
---

<!doctype html>
<html lang="en">
    <head>
        <BaseHead
            title={`Projects - ${SITE_TITLE}`}
            description="Projects and work by Adrian Villanueva Martinez - exploring data engineering, IoT, and innovative software solutions."
        />
    </head>
    <body>
        <Header />
        <main class="container">
            <!-- Hero Section -->
            <section class="hero-section">
                <div class="hero-content">
                    <div class="system-status">
                        <span class="status-dot"></span>
                        <span class="status-text">SYSTEM.PROJECTS.INDEX</span>
                    </div>
                    <h1 class="hero-title">PROJECT_LOG</h1>
                    <p class="hero-subtitle">
                        // ARCHIVE_ACCESS: GRANTED<br />
                        // LOADING_MODULES: COMPLETED
                    </p>
                    <p class="hero-description">
                        [SYSTEM_NOTE]: Accessing project database. Displaying
                        records of engineering solutions, data architectures,
                        and experimental systems.
                    </p>
                </div>
            </section>

            <!-- Categories Filter -->
            <section class="filter-section">
                <div class="section-header">
                    <span class="section-marker">>></span>
                    <h2 class="section-title">FILTER_PROTOCOL</h2>
                </div>
                <div class="categories-filter">
                    <button class="filter-btn active" data-category="all">
                        <span class="btn-marker">[</span>
                        ALL_SYSTEMS
                        <span class="btn-marker">]</span>
                    </button>
                    {
                        allCategories.map((category: string) => (
                            <button
                                class="filter-btn"
                                data-category={category.toLowerCase()}
                            >
                                <span class="btn-marker">[</span>
                                {category.toUpperCase()}
                                <span class="btn-marker">]</span>
                            </button>
                        ))
                    }
                </div>
            </section>

            <!-- Projects Grid -->
            <section class="projects-section">
                <div class="section-header">
                    <span class="section-marker">>></span>
                    <h2 class="section-title">ACTIVE_DEPLOYMENTS</h2>
                </div>
                <div class="projects-grid">
                    {
                        allProjects.map((project: Project) => (
                            <article
                                class="project-card"
                                data-categories={
                                    project.categories
                                        ?.map((c) => c.toLowerCase())
                                        .join(' ') || ''
                                }
                            >
                                <div class="card-header-line">
                                    <span class="card-id">
                                        ID:
                                        {Math.random()
                                            .toString(36)
                                            .substr(2, 6)
                                            .toUpperCase()}
                                    </span>
                                    <div class="card-status">
                                        <span class="status-indicator" />
                                        ONLINE
                                    </div>
                                </div>

                                <div class="project-image-container">
                                    {project.imgSrc &&
                                    imageMap[project.imgSrc] ? (
                                        <Image
                                            src={imageMap[project.imgSrc]}
                                            alt={project.title}
                                            width={600}
                                            height={400}
                                            loading="lazy"
                                            class="project-img"
                                        />
                                    ) : (
                                        <div class="placeholder-image">
                                            <span class="placeholder-text">
                                                [NO_VISUAL_DATA]
                                            </span>
                                        </div>
                                    )}
                                    <div class="scan-line" />
                                </div>

                                <div class="project-content">
                                    <div class="project-header">
                                        <h3 class="project-title">
                                            {project.title}
                                        </h3>
                                        <div class="project-badges">
                                            {project.isOpenSource ? (
                                                <span class="badge open-source">
                                                    OPEN_SRC
                                                </span>
                                            ) : (
                                                <span class="badge closed-source">
                                                    PROPRIETARY
                                                </span>
                                            )}
                                        </div>
                                    </div>

                                    <p class="project-description">
                                        {project.description}
                                    </p>

                                    {project.categories &&
                                        project.categories.length > 0 && (
                                            <div class="project-categories">
                                                {project.categories.map(
                                                    (category: string) => (
                                                        <span class="category-tag">
                                                            #{category}
                                                        </span>
                                                    )
                                                )}
                                            </div>
                                        )}

                                    <div class="project-actions">
                                        {project.isOpenSource &&
                                            project.repoUrl && (
                                                <a
                                                    href={project.repoUrl}
                                                    target="_blank"
                                                    rel="noopener noreferrer"
                                                    class="action-link"
                                                >
                                                    <span>SOURCE_CODE</span>
                                                    <span class="link-arrow">
                                                        →
                                                    </span>
                                                </a>
                                            )}
                                        {project.href && (
                                            <a
                                                href={project.href}
                                                target="_blank"
                                                rel="noopener noreferrer"
                                                class="action-link primary"
                                            >
                                                <span>LIVE_DEMO</span>
                                                <span class="link-arrow">
                                                    →
                                                </span>
                                            </a>
                                        )}
                                    </div>
                                </div>
                            </article>
                        ))
                    }
                </div>
            </section>

            <!-- Technologies Overview -->
            <section class="technologies-section">
                <div class="section-header">
                    <span class="section-marker">>></span>
                    <h2 class="section-title">TECH_STACK_ANALYSIS</h2>
                </div>
                <div class="technologies-overview">
                    <div class="tech-grid-header">
                        <span>DOMAIN</span>
                        <span>COUNT</span>
                        <span>STATUS</span>
                    </div>
                    <div class="technologies-list">
                        {
                            allCategories.map((category: string) => (
                                <div class="tech-row">
                                    <span class="tech-name">
                                        {category.toUpperCase()}
                                    </span>
                                    <span class="tech-count">
                                        [
                                        {
                                            allProjects.filter((p) =>
                                                p.categories?.includes(category)
                                            ).length
                                        }
                                        ]
                                    </span>
                                    <span class="tech-status">ACTIVE</span>
                                </div>
                            ))
                        }
                    </div>
                </div>
            </section>
        </main>
        <Footer />

        <script>
            // Project filtering functionality
            document.addEventListener('DOMContentLoaded', () => {
                const filterButtons = document.querySelectorAll('.filter-btn');
                const projectCards = document.querySelectorAll('.project-card');

                filterButtons.forEach((button) => {
                    button.addEventListener('click', () => {
                        const category = button.getAttribute('data-category');

                        // Update active button
                        filterButtons.forEach((btn) =>
                            btn.classList.remove('active')
                        );
                        button.classList.add('active');

                        // Filter projects
                        projectCards.forEach((card) => {
                            const htmlCard = card as HTMLElement;
                            if (category === 'all') {
                                htmlCard.style.display = 'flex';
                            } else {
                                const cardCategories =
                                    card.getAttribute('data-categories') || '';
                                if (
                                    category &&
                                    cardCategories.includes(category)
                                ) {
                                    htmlCard.style.display = 'flex';
                                } else {
                                    htmlCard.style.display = 'none';
                                }
                            }
                        });
                    });
                });
            });
        </script>
    </body>
</html>

<style>
    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 2rem;
    }

    /* Hero Section */
    .hero-section {
        margin-bottom: 4rem;
        padding: 3rem;
        border: 1px solid var(--border-color);
        background: var(--glass-bg);
        backdrop-filter: blur(12px);
        -webkit-backdrop-filter: blur(12px);
        position: relative;
        border-radius: var(--radius-md);
        overflow: hidden;
    }

    .hero-section::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 4px;
        height: 100%;
        background: var(--gradient-primary);
    }

    .hero-section::after {
        content: '';
        position: absolute;
        top: -50%;
        right: -20%;
        width: 400px;
        height: 400px;
        background: radial-gradient(circle, var(--accent-active-glow) 0%, transparent 70%);
        pointer-events: none;
    }

    .system-status {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        margin-bottom: 1.5rem;
        font-family: 'JetBrains Mono', monospace;
        font-size: 0.8rem;
        color: var(--text-muted);
    }

    .status-dot {
        width: 8px;
        height: 8px;
        background-color: var(--accent-active);
        border-radius: 50%;
        animation: pulse-glow 2s ease-in-out infinite;
    }

    .hero-title {
        font-family: 'JetBrains Mono', monospace;
        font-size: 3.5rem;
        font-weight: 700;
        margin-bottom: 1rem;
        letter-spacing: -0.05em;
        background: var(--gradient-primary);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .hero-subtitle {
        font-family: 'JetBrains Mono', monospace;
        font-size: 1rem;
        color: var(--accent-active);
        margin-bottom: 1.5rem;
        line-height: 1.6;
    }

    .hero-description {
        font-family: 'JetBrains Mono', monospace;
        font-size: 1rem;
        color: var(--text-secondary);
        max-width: 700px;
        line-height: 1.6;
        border-left: 2px solid var(--border-color);
        padding-left: 1rem;
    }

    /* Section Headers */
    .section-header {
        display: flex;
        align-items: center;
        gap: 1rem;
        margin-bottom: 2rem;
        border-bottom: 1px solid var(--border-color);
        padding-bottom: 0.5rem;
    }

    .section-marker {
        color: var(--accent-active);
        font-family: 'JetBrains Mono', monospace;
        font-weight: 700;
    }

    .section-title {
        font-family: 'JetBrains Mono', monospace;
        font-size: 1.5rem;
        font-weight: 700;
        color: var(--text-primary);
        margin: 0;
        text-transform: uppercase;
    }

    /* Filter Section */
    .filter-section {
        margin-bottom: 3rem;
    }

    .categories-filter {
        display: flex;
        flex-wrap: wrap;
        gap: 1rem;
    }

    .filter-btn {
        background: transparent;
        border: 1px solid var(--border-color);
        color: var(--text-secondary);
        padding: 0.5rem 1rem;
        font-family: 'JetBrains Mono', monospace;
        font-size: 0.9rem;
        cursor: pointer;
        transition: all var(--transition-base);
        display: flex;
        align-items: center;
        gap: 0.2rem;
        border-radius: var(--radius-sm);
    }

    .btn-marker {
        color: var(--text-muted);
        opacity: 0;
        transition: opacity 0.2s ease;
    }

    .filter-btn:hover {
        border-color: var(--accent-active);
        color: var(--accent-active);
    }

    .filter-btn:hover .btn-marker {
        opacity: 1;
    }

    .filter-btn.active {
        background: var(--accent-active);
        border-color: var(--accent-active);
        color: var(--bg-primary);
        box-shadow: 0 0 20px var(--accent-active-glow);
    }

    .filter-btn.active .btn-marker {
        color: var(--bg-primary);
        opacity: 1;
    }

    /* Projects Grid */
    .projects-section {
        margin-bottom: 4rem;
    }

    .projects-grid {
        display: grid;
        gap: 2rem;
        grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    }

    .project-card {
        background: var(--glass-bg);
        backdrop-filter: blur(8px);
        -webkit-backdrop-filter: blur(8px);
        border: 1px solid var(--border-color);
        display: flex;
        flex-direction: column;
        transition: all var(--transition-base);
        border-radius: var(--radius-md);
        overflow: hidden;
    }

    .project-card:hover {
        border-color: var(--border-glow);
        transform: translateY(-4px);
        box-shadow: var(--shadow-glow), var(--shadow-lg);
    }

    .card-header-line {
        display: flex;
        justify-content: space-between;
        padding: 0.5rem 1rem;
        background: var(--bg-secondary);
        border-bottom: 1px solid var(--border-color);
        font-family: 'JetBrains Mono', monospace;
        font-size: 0.7rem;
        color: var(--text-muted);
    }

    .card-status {
        display: flex;
        align-items: center;
        gap: 0.4rem;
        color: var(--accent-active);
    }

    .status-indicator {
        width: 6px;
        height: 6px;
        background-color: var(--accent-active);
        border-radius: 50%;
        animation: pulse 2s infinite;
    }

    .project-image-container {
        position: relative;
        height: 200px;
        overflow: hidden;
        background: var(--bg-tertiary);
        border-bottom: 1px solid var(--border-color);
    }

    .project-img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        filter: grayscale(50%) contrast(1.05) brightness(0.95);
        transition: filter 0.4s ease;
    }

    .project-card:hover .project-img {
        filter: grayscale(0%) contrast(1) brightness(1);
    }

    .placeholder-image {
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        background: repeating-linear-gradient(
            45deg,
            var(--bg-secondary),
            var(--bg-secondary) 10px,
            var(--bg-tertiary) 10px,
            var(--bg-tertiary) 20px
        );
    }

    .placeholder-text {
        font-family: 'JetBrains Mono', monospace;
        color: var(--text-muted);
        font-size: 0.8rem;
        background: var(--bg-primary);
        padding: 0.5rem;
        border: 1px solid var(--border-color);
    }

    .scan-line {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 2px;
        background: rgba(255, 255, 255, 0.1);
        animation: scan 3s linear infinite;
        pointer-events: none;
    }

    .project-content {
        padding: 1.5rem;
        flex: 1;
        display: flex;
        flex-direction: column;
    }

    .project-header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 1rem;
        gap: 1rem;
    }

    .project-title {
        font-family: 'JetBrains Mono', monospace;
        font-size: 1.2rem;
        font-weight: 700;
        color: var(--text-primary);
        margin: 0;
    }

    .badge {
        font-family: 'JetBrains Mono', monospace;
        font-size: 0.7rem;
        padding: 0.2rem 0.5rem;
        border: 1px solid var(--border-color);
        color: var(--text-secondary);
        border-radius: var(--radius-sm);
    }

    .badge.open-source {
        border-color: rgba(0, 230, 138, 0.3);
        color: var(--accent-active);
        background: var(--accent-active-subtle);
    }

    .project-description {
        font-family: 'JetBrains Mono', monospace;
        font-size: 0.9rem;
        color: var(--text-secondary);
        line-height: 1.6;
        margin-bottom: 1.5rem;
        flex: 1;
    }

    .project-categories {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
        margin-bottom: 1.5rem;
    }

    .category-tag {
        font-family: 'JetBrains Mono', monospace;
        font-size: 0.75rem;
        color: var(--text-muted);
    }

    .project-actions {
        display: flex;
        gap: 1rem;
        margin-top: auto;
    }

    .action-link {
        flex: 1;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0.75rem;
        border: 1px solid var(--border-color);
        color: var(--text-secondary);
        text-decoration: none;
        font-family: 'JetBrains Mono', monospace;
        font-size: 0.8rem;
        transition: all var(--transition-base);
        border-radius: var(--radius-sm);
    }

    .action-link:hover {
        background: var(--bg-secondary);
        color: var(--text-primary);
        border-color: var(--text-primary);
        text-shadow: none;
    }

    .action-link.primary {
        background: var(--bg-secondary);
        border-color: var(--text-muted);
    }

    .action-link.primary:hover {
        background: var(--accent-active);
        border-color: var(--accent-active);
        color: var(--bg-primary);
        box-shadow: 0 0 20px var(--accent-active-glow);
        text-shadow: none;
    }

    /* Technologies Overview */
    .technologies-overview {
        border: 1px solid var(--border-color);
        background: var(--glass-bg);
        backdrop-filter: blur(8px);
        -webkit-backdrop-filter: blur(8px);
        border-radius: var(--radius-md);
        overflow: hidden;
    }

    .tech-grid-header {
        display: grid;
        grid-template-columns: 2fr 1fr 1fr;
        padding: 1rem;
        background: var(--bg-secondary);
        border-bottom: 1px solid var(--border-color);
        font-family: 'JetBrains Mono', monospace;
        font-size: 0.8rem;
        color: var(--text-muted);
        font-weight: 700;
    }

    .technologies-list {
        display: flex;
        flex-direction: column;
    }

    .tech-row {
        display: grid;
        grid-template-columns: 2fr 1fr 1fr;
        padding: 1rem;
        border-bottom: 1px solid var(--border-color);
        font-family: 'JetBrains Mono', monospace;
        font-size: 0.9rem;
        color: var(--text-secondary);
        transition: background 0.2s ease;
    }

    .tech-row:last-child {
        border-bottom: none;
    }

    .tech-row:hover {
        background: var(--accent-active-subtle);
        color: var(--text-primary);
    }

    .tech-name {
        color: var(--accent-active);
        text-shadow: 0 0 8px var(--accent-active-glow);
    }

    .tech-status {
        color: var(--text-muted);
        font-size: 0.8rem;
    }

    @keyframes pulse {
        0% {
            opacity: 1;
        }
        50% {
            opacity: 0.5;
        }
        100% {
            opacity: 1;
        }
    }

    @keyframes scan {
        0% {
            transform: translateY(0);
        }
        100% {
            transform: translateY(200px);
        }
    }

    @media (max-width: 768px) {
        .container {
            padding: 1rem;
        }

        .hero-title {
            font-size: 2.5rem;
        }

        .projects-grid {
            grid-template-columns: 1fr;
        }

        .tech-grid-header,
        .tech-row {
            grid-template-columns: 1fr auto;
        }

        .tech-grid-header span:last-child,
        .tech-row span:last-child {
            display: none;
        }
    }
</style>
