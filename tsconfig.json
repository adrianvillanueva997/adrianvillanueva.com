{
	"extends": "astro/tsconfigs/strict",
	"include": [".astro/types.d.ts", "**/*"],
	"exclude": ["dist"],
	"compilerOptions": {
		"strictNullChecks": true,
		"baseUrl": ".",
		"paths": {
			"@/components/*": ["src/components/*"],
			"@/data/*": ["src/data/*"],
			"@/layouts/*": ["src/layouts/*"],
			"@/styles/*": ["src/styles/*"],
			"@/utils/*": ["src/utils/*"],
			"@/assets/*": ["src/assets/*"],
			"@/*": ["src/*"]
		}
	}
}
